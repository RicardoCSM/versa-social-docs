  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "JWT Bearer token"
      }
    },
    "parameters": {
      "X-Domain": {
        "name": "X-Domain",
        "in": "header",
        "required": false,
        "schema": {
          "type": "string",
          "example": "development.versasocial.com.br"
        },
        "description": "Domínio do tenant."
      },
      "Id": {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": { "type": "string" },
        "description": "Identificador do recurso."
      },
      "page": {
        "name": "page",
        "in": "query",
        "schema": { "type": "integer", "minimum": 1, "default": 1 },
        "description": "Página"
      },
      "per_page": {
        "name": "per_page",
        "in": "query",
        "schema": {
          "oneOf": [
            { "type": "integer", "minimum": 1, "default": 20 },
            { "type": "string", "enum": ["all"] }
          ]
        },
        "description": "Itens por página ou 'all'."
      },
      "sort_field": {
        "name": "sort_field",
        "in": "query",
        "schema": { "type": "string", "example": "created_at" },
        "description": "Campo de ordenação"
      },
      "sort_order": {
        "name": "sort_order",
        "in": "query",
        "schema": {
          "type": "string",
          "enum": ["asc", "desc"],
          "default": "asc"
        },
        "description": "Direção da ordenação"
      },
      "search": {
        "name": "search",
        "in": "query",
        "schema": { "type": "string" },
        "description": "Busca textual"
      }
    },
    "responses": {
      "Unauthorized": {
        "description": "Não autenticado",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "NotFound": {
        "description": "Recurso não encontrado",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "UnprocessableEntity": {
        "description": "Erro de validação",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "ServerError": {
        "description": "Erro interno",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      }
    },
    "schemas": {
      "CreateFamilyMonitoringPlanTaskRatingDTO": {
        "type": "object",
        "required": ["rating", "comment"],
        "properties": {
          "rating": {
            "type": "integer",
            "minimum": 0,
            "maximum": 5,
            "description": "Avaliação de 0 a 5"
          },
          "comment": {
            "type": "string",
            "description": "Comentário da avaliação"
          }
        }
      },
      "CreateFamilyMonitoringPlanTaskDTO": {
        "type": "object",
        "required": [
          "family_monitoring_plan_id",
          "title",
          "forecast_date",
          "status"
        ],
        "properties": {
          "family_monitoring_plan_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do plano de acompanhamento familiar"
          },
          "operators": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            },
            "description": "IDs dos operadores"
          },
          "user_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do usuário"
          },
          "title": {
            "type": "string",
            "maxLength": 255,
            "description": "Título da tarefa"
          },
          "forecast_date": {
            "type": "string",
            "format": "date",
            "description": "Data prevista"
          },
          "description": {
            "type": "string",
            "description": "Descrição da tarefa"
          },
          "priority": {
            "type": "string",
            "description": "Prioridade da tarefa"
          },
          "status": {
            "type": "string",
            "description": "Status da tarefa"
          }
        }
      },
      "CreateFamilyMonitoringPlanDTO": {
        "type": "object",
        "required": ["operator_id", "family_id", "unit_id", "social_record_id"],
        "properties": {
          "operator_id": {
            "type": "string",
            "description": "ID do operador"
          },
          "family_id": {
            "type": "string",
            "description": "ID da família"
          },
          "unit_id": {
            "type": "string",
            "description": "ID da unidade"
          },
          "social_record_id": {
            "type": "string",
            "description": "ID do prontuário social"
          },
          "family_profiles": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Perfis da família"
          },
          "initial_diagnosis": {
            "type": "string",
            "nullable": true,
            "description": "Diagnóstico inicial"
          },
          "started_at": {
            "type": "string",
            "format": "date",
            "description": "Data de início"
          },
          "forecast_started_at": {
            "type": "string",
            "format": "date",
            "nullable": true,
            "description": "Previsão de início"
          },
          "forecast_ended_at": {
            "type": "string",
            "format": "date",
            "nullable": true,
            "description": "Previsão de término"
          },
          "family_vulnerabilities": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Vulnerabilidades da família"
          },
          "family_potentials": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Potencialidades da família"
          },
          "other_vulnerabilities": {
            "type": "string",
            "nullable": true,
            "description": "Outras vulnerabilidades"
          },
          "other_potentials": {
            "type": "string",
            "nullable": true,
            "description": "Outras potencialidades"
          }
        }
      },
      "ItemResource": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "name", "created_at", "updated_at"]
      },
      "ItemResponse": {
        "type": "object",
        "properties": {
          "data": { "$ref": "#/components/schemas/ItemResource" }
        }
      },
      "PaginatedItemResource": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/ItemResource" }
          },
          "links": { "$ref": "#/components/schemas/Links" },
          "meta": { "$ref": "#/components/schemas/Meta" }
        }
      },
      "CreateItemDTO": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string", "example": "Nome do item" }
        }
      },
      "Links": {
        "type": "object",
        "properties": {
          "first": { "type": "string", "nullable": true },
          "last": { "type": "string", "nullable": true },
          "prev": { "type": "string", "nullable": true },
          "next": { "type": "string", "nullable": true }
        }
      },
      "Meta": {
        "type": "object",
        "properties": {
          "current_page": { "type": "integer" },
          "last_page": { "type": "integer" },
          "per_page": { "type": "integer" },
          "total": { "type": "integer" }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "errors": {
            "type": "object",
