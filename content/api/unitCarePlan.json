        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUnitCarePlanTaskDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Atualizado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      },
      "delete": {
        "tags": ["Planos Individuais de Atendimento"],
        "summary": "Deletar plano",
        "description": "Deleta um plano de atendimento pelo ID.",
        "operationId": "deleteUnitCarePlan",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "responses": {
          "204": { "description": "Deletado" },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    },
    "/unit-care-plans/{id}/tasks": {
      "get": {
        "tags": ["Planos Individuais de Atendimento"],
        "summary": "Listar tarefas do plano",
        "description": "Lista paginada de tarefas de um plano de atendimento.",
        "operationId": "listUnitCarePlanTasks",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" },
          { "$ref": "#/components/parameters/page" },
          { "$ref": "#/components/parameters/per_page" },
          { "$ref": "#/components/parameters/sort_field" },
          { "$ref": "#/components/parameters/sort_order" },
          { "$ref": "#/components/parameters/search" },
          {
            "name": "operation_id",
            "in": "query",
            "schema": { "type": "string" },
            "description": "Filtrar por ID da operação"
          },
          {
            "name": "unit_care_plan_unit_id",
            "in": "query",
            "schema": { "type": "string" },
            "description": "Filtrar por ID da unidade do plano de atendimento"
          },
          {
            "name": "forecast_is_same_day",
            "in": "query",
            "schema": { "type": "boolean" },
            "description": "Filtrar por previsão no mesmo dia"
          },
          {
            "name": "forecast_greater",
            "in": "query",
            "schema": { "type": "string", "format": "date" },
            "description": "Filtrar por previsão maior que a data informada"
          },
          {
            "name": "forecast_less",
            "in": "query",
            "schema": { "type": "string", "format": "date" },
            "description": "Filtrar por previsão menor que a data informada"
          },
          {
            "name": "status_different",
            "in": "query",
            "schema": { "type": "string" },
            "description": "Filtrar por status diferente do informado"
          },
          {
            "name": "dimension",
            "in": "query",
            "schema": { "type": "string" },
            "description": "Filtrar por dimensão"
          },
          {
            "name": "begin",
            "in": "query",
            "schema": { "type": "string", "format": "date" },
            "description": "Filtrar por data inicial (maior ou igual)"
          },
          {
            "name": "end",
            "in": "query",
            "schema": { "type": "string", "format": "date" },
            "description": "Filtrar por data final (menor ou igual)"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista paginada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedItemResource"
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },
    "/unit-care-plans/dashboard/{unit_id}": {
      "get": {
        "tags": ["Planos Individuais de Atendimento"],
        "summary": "Dashboard de planos",
        "description": "Obtém dados do dashboard de planos de atendimento para uma unidade.",
        "operationId": "getUnitCarePlanDashboard",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          {
            "name": "unit_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "ID da unidade"
          }
        ],
        "responses": {
          "200": {
            "description": "Dados do dashboard",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total_plans": { "type": "integer" },
                    "completed_plans": { "type": "integer" },
                    "pending_plans": { "type": "integer" }
                  }
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },
    "/unit-care-plans/tasks": {
