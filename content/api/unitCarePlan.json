  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "JWT Bearer token"
      }
    },
    "parameters": {
      "X-Domain": {
        "name": "X-Domain",
        "in": "header",
        "required": false,
        "schema": {
          "type": "string",
          "example": "development.versasocial.com.br"
        },
        "description": "Domínio do tenant."
      },
      "Id": {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": { "type": "string" },
        "description": "Identificador do recurso."
      },
      "page": {
        "name": "page",
        "in": "query",
        "schema": { "type": "integer", "minimum": 1, "default": 1 },
        "description": "Página"
      },
      "per_page": {
        "name": "per_page",
        "in": "query",
        "schema": {
          "oneOf": [
            { "type": "integer", "minimum": 1, "default": 20 },
            { "type": "string", "enum": ["all"] }
          ]
        },
        "description": "Itens por página ou 'all'."
      },
      "sort_field": {
        "name": "sort_field",
        "in": "query",
        "schema": { "type": "string", "example": "created_at" },
        "description": "Campo de ordenação"
      },
      "sort_order": {
        "name": "sort_order",
        "in": "query",
        "schema": {
          "type": "string",
          "enum": ["asc", "desc"],
          "default": "asc"
        },
        "description": "Direção da ordenação"
      },
      "search": {
        "name": "search",
        "in": "query",
        "schema": { "type": "string" },
        "description": "Busca textual"
      }
    },
    "responses": {
      "Unauthorized": {
        "description": "Não autenticado",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "NotFound": {
        "description": "Recurso não encontrado",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "UnprocessableEntity": {
        "description": "Erro de validação",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "ServerError": {
        "description": "Erro interno",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      }
    },
    "schemas": {
      "ItemResource": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "name", "created_at", "updated_at"]
      },
      "ItemResponse": {
        "type": "object",
        "properties": {
          "data": { "$ref": "#/components/schemas/ItemResource" }
        }
      },
      "PaginatedItemResource": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/ItemResource" }
          },
          "links": { "$ref": "#/components/schemas/Links" },
          "meta": { "$ref": "#/components/schemas/Meta" }
        }
      },
      "CreateUnitCarePlanDTO": {
        "type": "object",
        "required": [
          "operator_id",
          "user_id",
          "unit_id",
          "social_service_id",
          "social_record_id"
        ],
        "properties": {
          "operator_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do operador"
          },
          "user_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do usuário"
          },
          "unit_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID da unidade"
          },
          "social_service_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do serviço/programa socioassistencial"
          },
          "social_record_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do atendimento"
          },
          "started_at": {
            "type": "string",
            "format": "date",
            "description": "Data de início"
          },
          "forecast_ended_at": {
            "type": "string",
            "format": "date",
            "description": "Data prevista de término"
          },
          "socioeducational_types": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Tipos socioeducacionais"
          }
        }
      },
      "CreateUnitCarePlanTaskDTO": {
        "type": "object",
        "required": [
          "unit_care_plan_id",
          "title",
          "forecast_date",
          "dimension",
          "status"
        ],
        "properties": {
          "unit_care_plan_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do plano de atendimento"
          },
          "operators": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            },
            "description": "IDs dos operadores"
          },
          "title": {
            "type": "string",
            "maxLength": 255,
            "description": "Título do plano de atendimento"
          },
          "forecast_date": {
