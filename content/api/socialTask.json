{
  "openapi": "3.1.1",
  "info": {
    "title": "Planejamento de Atividades API",
    "version": "1.0.0",
    "description": "Endpoints do módulo Planejamento de Atividades."
  },
  "servers": [
    {
      "url": "https://dev-api.versasocial.com.br/api/v1",
      "description": "Desenvolvimento"
    },
    {
      "url": "https://homo-api.versasocial.com.br/api/v1",
      "description": "Homologação"
    },
    {
      "url": "https://api.versasocial.com.br/api/v1",
      "description": "Produção"
    }
  ],
  "security": [{ "bearerAuth": [] }],
  "tags": [
    {
      "name": "Planejamento de Atividades",
      "description": "Operações do módulo Planejamento de Atividades"
    }
  ],
  "paths": {
    "/tasks": {
      "post": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Criar atividade",
        "description": "Cria uma nova atividade.",
        "operationId": "createSocialTaskItem",
        "parameters": [{ "$ref": "#/components/parameters/X-Domain" }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateSocialTaskDTO" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Criado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/tasks/labels": {
      "get": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Listar labels",
        "description": "Lista as labels disponíveis.",
        "operationId": "listSocialTaskLabels",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/page" },
          { "$ref": "#/components/parameters/per_page" },
          { "$ref": "#/components/parameters/sort_field" },
          { "$ref": "#/components/parameters/sort_order" },
          { "$ref": "#/components/parameters/search" }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedItemResource"
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      },
      "post": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Criar label",
        "description": "Cria uma nova label.",
        "operationId": "createSocialTaskLabel",
        "parameters": [{ "$ref": "#/components/parameters/X-Domain" }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateSocialTaskLabelDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Criado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/tasks/cycles": {
      "post": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Criar ciclo",
        "description": "Cria um novo ciclo de atividades.",
        "operationId": "createSocialTaskCycle",
        "parameters": [{ "$ref": "#/components/parameters/X-Domain" }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateSocialTaskCycleDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Criado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/tasks/cycles/{id}": {
      "get": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Detalhar ciclo",
        "description": "Obtém os detalhes de um ciclo de atividades.",
        "operationId": "getSocialTaskCycle",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },
      "delete": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Excluir ciclo",
        "description": "Exclui um ciclo de atividades.",
        "operationId": "deleteSocialTaskCycle",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "responses": {
          "204": { "description": "Sem conteúdo" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/tasks/cycles/{id}/items": {
      "get": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Listar atividades do ciclo",
        "description": "Lista as atividades associadas a um ciclo específico.",
        "operationId": "listSocialTaskCycleItems",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" },
          { "$ref": "#/components/parameters/page" },
          { "$ref": "#/components/parameters/per_page" },
          { "$ref": "#/components/parameters/sort_field" },
          { "$ref": "#/components/parameters/sort_order" },
          { "$ref": "#/components/parameters/search" },
          {
            "name": "social_task_project",
            "in": "query",
            "schema": { "type": "string", "format": "uuid" },
            "description": "Filtrar por projeto da tarefa"
          },
          {
            "name": "social_task_labels",
            "in": "query",
            "schema": {
              "type": "array",
              "items": { "type": "string", "format": "uuid" }
            },
            "description": "Filtrar por labels da tarefa"
          },
          {
            "name": "begin",
            "in": "query",
            "schema": { "type": "string", "format": "date" },
            "description": "Data de início para filtro"
          },
          {
            "name": "end",
            "in": "query",
            "schema": { "type": "string", "format": "date" },
            "description": "Data de fim para filtro"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedItemResource"
                }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/tasks/projects/copy": {
      "post": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Copiar projetos",
        "description": "Copia os projetos de atividades de um ciclo para outro.",
        "operationId": "copySocialTaskProjects",
        "parameters": [{ "$ref": "#/components/parameters/X-Domain" }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CopySocialTaskProjectDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ItemResponse"
                }
              }
            }
          },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/tasks/{id}": {
      "get": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Detalhar atividade",
        "description": "Obtém os detalhes de uma atividade específica.",
        "operationId": "getSocialTaskItem",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },
      "put": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Atualizar atividade",
        "description": "Atualiza os detalhes de uma atividade específica.",
        "operationId": "updateSocialTaskItem",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateSocialTaskDTO" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },
      "delete": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Excluir atividade",
        "description": "Exclui uma atividade específica.",
        "operationId": "deleteSocialTaskItem",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "responses": {
          "204": { "description": "Sem conteúdo" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/tasks/{id}/ratings": {
      "get": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Listar avaliações da atividade",
        "description": "Lista as avaliações associadas a uma atividade específica.",
        "operationId": "listSocialTaskItemRatings",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" },
          { "$ref": "#/components/parameters/page" },
          { "$ref": "#/components/parameters/per_page" },
          { "$ref": "#/components/parameters/sort_field" },
          { "$ref": "#/components/parameters/sort_order" },
          { "$ref": "#/components/parameters/search" }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedItemResource"
                }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },
      "post": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Avaliar atividade",
        "description": "Adiciona uma avaliação a uma atividade específica.",
        "operationId": "createSocialTaskItemRating",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateSocialTaskRatingDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Criado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/tasks/ratings/{id}": {
      "get": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Detalhar avaliação",
        "description": "Obtém os detalhes de uma avaliação específica.",
        "operationId": "getSocialTaskItemRating",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },
      "delete": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Excluir avaliação",
        "description": "Exclui uma avaliação específica.",
        "operationId": "deleteSocialTaskItemRating",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "responses": {
          "204": { "description": "Sem conteúdo" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },
      "put": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Atualizar avaliação",
        "description": "Atualiza os detalhes de uma avaliação específica.",
        "operationId": "updateSocialTaskItemRating",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateSocialTaskRatingDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/collective-actions/{uuid}/tasks/cycles/{referenceDate}": {
      "get": {
        "tags": ["Planejamento de Atividades"],
        "summary": "Obter ou criar ciclo por ação coletiva e data de referência",
        "description": "Obtém os detalhes de um ciclo de atividades específico baseado na ação coletiva e data de referência. Se o ciclo não existir, ele será criado automaticamente.",
        "operationId": "getOrCreateSocialTaskCycleByCollectiveActionAndReferenceDate",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          {
            "name": "uuid",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" },
            "description": "Identificador da ação coletiva."
          },
          {
            "name": "referenceDate",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "date" },
            "description": "Data de referência no formato AAAA-MM-DD."
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "JWT Bearer token"
      }
    },
    "parameters": {
      "X-Domain": {
        "name": "X-Domain",
        "in": "header",
        "required": false,
        "schema": {
          "type": "string",
          "example": "development.versasocial.com.br"
        },
        "description": "Domínio do tenant."
      },
      "Id": {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": { "type": "string" },
        "description": "Identificador do recurso."
      },
      "page": {
        "name": "page",
        "in": "query",
        "schema": { "type": "integer", "minimum": 1, "default": 1 },
        "description": "Página"
      },
      "per_page": {
        "name": "per_page",
        "in": "query",
        "schema": {
          "oneOf": [
            { "type": "integer", "minimum": 1, "default": 20 },
            { "type": "string", "enum": ["all"] }
          ]
        },
        "description": "Itens por página ou 'all'."
      },
      "sort_field": {
        "name": "sort_field",
        "in": "query",
        "schema": { "type": "string", "example": "created_at" },
        "description": "Campo de ordenação"
      },
      "sort_order": {
        "name": "sort_order",
        "in": "query",
        "schema": {
          "type": "string",
          "enum": ["asc", "desc"],
          "default": "asc"
        },
        "description": "Direção da ordenação"
      },
      "search": {
        "name": "search",
        "in": "query",
        "schema": { "type": "string" },
        "description": "Busca textual"
      }
    },
    "responses": {
      "Unauthorized": {
        "description": "Não autenticado",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "NotFound": {
        "description": "Recurso não encontrado",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "UnprocessableEntity": {
        "description": "Erro de validação",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "ServerError": {
        "description": "Erro interno",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      }
    },
    "schemas": {
      "ItemResource": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "name", "created_at", "updated_at"]
      },
      "ItemResponse": {
        "type": "object",
        "properties": {
          "data": { "$ref": "#/components/schemas/ItemResource" }
        }
      },
      "PaginatedItemResource": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/ItemResource" }
          },
          "links": { "$ref": "#/components/schemas/Links" },
          "meta": { "$ref": "#/components/schemas/Meta" }
        }
      },
      "CreateSocialTaskDTO": {
        "type": "object",
        "required": [
          "social_task_cycle_id",
          "title",
          "forecast_date",
          "status"
        ],
        "properties": {
          "social_task_cycle_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do ciclo da tarefa"
          },
          "operators": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            },
            "description": "Lista de operadores"
          },
          "social_task_project_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do projeto da tarefa"
          },
          "title": {
            "type": "string",
            "maxLength": 255,
            "description": "Título da tarefa"
          },
          "forecast_date": {
            "type": "string",
            "format": "date",
            "description": "Data prevista"
          },
          "description": {
            "type": "string",
            "description": "Descrição da tarefa"
          },
          "objectives": {
            "type": "string",
            "description": "Objetivos da tarefa"
          },
          "methodology": {
            "type": "string",
            "description": "Metodologia da tarefa"
          },
          "resources": {
            "type": "string",
            "description": "Recursos necessários"
          },
          "target_audience": {
            "type": "string",
            "description": "Público-alvo"
          },
          "priority": {
            "type": "string",
            "description": "Prioridade da tarefa"
          },
          "status": {
            "type": "string",
            "description": "Status da tarefa"
          },
          "labels": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            },
            "description": "Lista de labels"
          }
        }
      },
      "CreateSocialTaskLabelDTO": {
        "type": "object",
        "required": ["name", "color"],
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 255,
            "description": "Nome da label"
          },
          "color": {
            "type": "string",
            "pattern": "^#([a-f0-9]{6}|[a-f0-9]{3})$",
            "description": "Cor da label em formato hexadecimal"
          }
        }
      },
      "CreateSocialTaskCycleDTO": {
        "type": "object",
        "required": ["collective_action_id", "reference_date"],
        "properties": {
          "collective_action_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID da ação coletiva"
          },
          "reference_date": {
            "type": "string",
            "format": "date",
            "description": "Data de referência"
          }
        }
      },
      "CopySocialTaskProjectDTO": {
        "type": "object",
        "required": [
          "origin_social_task_cycle_id",
          "destiny_social_task_cycle_id"
        ],
        "properties": {
          "origin_social_task_project_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do projeto de origem (opcional)"
          },
          "origin_social_task_cycle_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do ciclo de origem"
          },
          "destiny_social_task_project_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do projeto de destino (opcional)"
          },
          "destiny_social_task_cycle_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID do ciclo de destino"
          }
        }
      },
      "CreateSocialTaskRatingDTO": {
        "type": "object",
        "required": ["rating", "comment"],
        "properties": {
          "rating": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5,
            "description": "Avaliação de 1 a 5"
          },
          "comment": {
            "type": "string",
