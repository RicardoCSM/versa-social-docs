{
  "openapi": "3.1.1",
  "info": {
    "title": "Questionários API",
    "version": "1.0.0",
    "description": "Endpoints do módulo Questionários."
  },
  "servers": [
    {
      "url": "https://dev-api.versasocial.com.br/api/v1",
      "description": "Desenvolvimento"
    },
    {
      "url": "https://homo-api.versasocial.com.br/api/v1",
      "description": "Homologação"
    },
    {
      "url": "https://api.versasocial.com.br/api/v1",
      "description": "Produção"
    }
  ],
  "security": [{ "bearerAuth": [] }],
  "tags": [
    {
      "name": "Questionários",
      "description": "Operações do módulo Questionários"
    }
  ],
  "paths": {
    "/questionnaires/groups": {
      "get": {
        "tags": ["Questionários"],
        "summary": "Listar grupos de questionários",
        "description": "Lista paginada de grupos do módulo Questionários.",
        "operationId": "listQuestionariosGroups",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/page" },
          { "$ref": "#/components/parameters/per_page" },
          { "$ref": "#/components/parameters/sort_field" },
          { "$ref": "#/components/parameters/sort_order" },
          { "$ref": "#/components/parameters/search" }
        ],
        "responses": {
          "200": {
            "description": "Lista paginada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedItemResource"
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      },
      "post": {
        "tags": ["Questionários"],
        "summary": "Criar item",
        "description": "Cria um novo questionário.",
        "operationId": "createQuestionario",
        "parameters": [{ "$ref": "#/components/parameters/X-Domain" }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/createQuestionnaireGroupDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Criado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/questionnaires/groups/{uuid}": {
      "get": {
        "tags": ["Questionários"],
        "summary": "Detalhar item",
        "description": "Retorna um item pelo ID.",
        "operationId": "getQuestionariosItem",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "responses": {
          "200": {
            "description": "Detalhe do item",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },
      "put": {
        "tags": ["Questionários"],
        "summary": "Atualizar item",
        "description": "Atualiza um questionário existente.",
        "operationId": "updateQuestionario",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/createQuestionnaireGroupDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },
      "delete": {
        "tags": ["Questionários"],
        "summary": "Deletar item",
        "description": "Deleta um questionário existente.",
        "operationId": "deleteQuestionario",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "responses": {
          "204": { "description": "Deletado com sucesso" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/questionnaires/responses": {
      "post": {
        "tags": ["Questionários"],
        "summary": "Registrar resposta",
        "description": "Registra a resposta de um questionário.",
        "operationId": "submitQuestionarioResponse",
        "parameters": [{ "$ref": "#/components/parameters/X-Domain" }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/createResponseDTO" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Criado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },
      "get": {
        "tags": ["Questionários"],
        "summary": "Listar respostas",
        "description": "Lista paginada de respostas de questionários.",
        "operationId": "listQuestionarioResponses",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/page" },
          { "$ref": "#/components/parameters/per_page" },
          { "$ref": "#/components/parameters/sort_field" },
          { "$ref": "#/components/parameters/sort_order" },
          { "$ref": "#/components/parameters/search" },
          {
            "name": "social_record_id",
            "in": "query",
            "schema": { "type": "string" },
            "description": "Filtra por ID do atendimento."
          },
          {
            "name": "begin",
            "in": "query",
            "schema": { "type": "string", "format": "date" },
            "description": "Filtra por data de início (maior ou igual)."
          },
          {
            "name": "end",
            "in": "query",
            "schema": { "type": "string", "format": "date" },
            "description": "Filtra por data de fim (menor ou igual)."
          },
          {
            "name": "created_at",
            "in": "query",
            "schema": { "type": "string", "format": "date" },
            "description": "Filtra por data de criação específica."
          }
        ],
        "responses": {
          "200": {
            "description": "Lista paginada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedItemResource"
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },
    "/questionnaires/responses/{uuid}": {
      "get": {
        "tags": ["Questionários"],
        "summary": "Detalhar resposta",
        "description": "Retorna uma resposta de questionário pelo ID.",
        "operationId": "getQuestionarioResponse",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "responses": {
          "200": {
            "description": "Detalhe da resposta",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },
      "delete": {
        "tags": ["Questionários"],
        "summary": "Deletar resposta",
        "description": "Deleta uma resposta de questionário existente.",
        "operationId": "deleteQuestionarioResponse",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "responses": {
          "204": { "description": "Deletado com sucesso" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/questionnaires/responses/{uuid}/related-questionnaires": {
      "get": {
        "tags": ["Questionários"],
        "summary": "Listar questionários relacionados",
        "description": "Lista os questionários relacionados a uma resposta específica.",
        "operationId": "listRelatedQuestionnaires",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "responses": {
          "200": {
            "description": "Lista de questionários relacionados",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedItemResource"
                }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/questionnaires/responses/{uuid}/answers": {
      "post": {
        "tags": ["Questionários"],
        "summary": "Registrar respostas detalhadas",
        "description": "Registra as respostas detalhadas associadas a uma resposta de questionário.",
        "operationId": "submitDetailedAnswers",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/createQuestionnairesResponseAnswerDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Respostas detalhadas registradas com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/questionnaires": {
      "get": {
        "tags": ["Questionários"],
        "summary": "Listar questionários",
        "description": "Lista paginada de questionários disponíveis.",
        "operationId": "listAvailableQuestionnaires",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/page" },
          { "$ref": "#/components/parameters/per_page" },
          { "$ref": "#/components/parameters/sort_field" },
          { "$ref": "#/components/parameters/sort_order" },
          { "$ref": "#/components/parameters/search" },
          {
            "name": "questionnaires_group_id",
            "in": "query",
            "schema": { "type": "string" },
            "description": "Filtra por ID do grupo de questionários."
          },
          {
            "name": "title",
            "in": "query",
            "schema": { "type": "string" },
            "description": "Filtra por título (busca parcial)."
          },
          {
            "name": "active",
            "in": "query",
            "schema": { "type": "boolean" },
            "description": "Filtra por status ativo."
          },
          {
            "name": "begin",
            "in": "query",
            "schema": { "type": "string", "format": "date" },
            "description": "Filtra por data de início (maior ou igual)."
          },
          {
            "name": "end",
            "in": "query",
            "schema": { "type": "string", "format": "date" },
            "description": "Filtra por data de fim (menor ou igual)."
          },
          {
            "name": "created_at",
            "in": "query",
            "schema": { "type": "string", "format": "date" },
            "description": "Filtra por data de criação específica."
          }
        ],
        "responses": {
          "200": {
            "description": "Lista paginada de questionários",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedItemResource"
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      },
      "post": {
        "tags": ["Questionários"],
        "summary": "Criar questionário",
        "description": "Cria um novo questionário.",
        "operationId": "createNewQuestionnaire",
        "parameters": [{ "$ref": "#/components/parameters/X-Domain" }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/createQuestionnaireGroupDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Questionário criado com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/questionnaires/{uuid}": {
      "get": {
        "tags": ["Questionários"],
        "summary": "Detalhar questionário",
        "description": "Retorna um questionário pelo ID.",
        "operationId": "getQuestionnaireById",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "responses": {
          "200": {
            "description": "Detalhe do questionário",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },
      "put": {
        "tags": ["Questionários"],
        "summary": "Atualizar questionário",
        "description": "Atualiza um questionário existente.",
        "operationId": "updateQuestionnaireById",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/createQuestionnaireGroupDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Questionário atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },
      "delete": {
        "tags": ["Questionários"],
        "summary": "Deletar questionário",
        "description": "Deleta um questionário existente.",
        "operationId": "deleteQuestionnaireById",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "responses": {
          "204": { "description": "Deletado com sucesso" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/questionnaires/{uuid}/last-response": {
      "post": {
        "tags": ["Questionários"],
        "summary": "Registrar resposta baseada na última",
        "description": "Registra uma nova resposta de questionário baseada na última resposta existente para o mesmo questionário e família.",
        "operationId": "submitResponseBasedOnLast",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/lastQuestionnaireResponseDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Resposta criada com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ItemResponse" }
              }
            }
          },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "JWT Bearer token"
      }
    },
    "parameters": {
      "X-Domain": {
        "name": "X-Domain",
        "in": "header",
        "required": false,
        "schema": {
          "type": "string",
          "example": "development.versasocial.com.br"
        },
        "description": "Domínio do tenant."
      },
      "Id": {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": { "type": "string" },
        "description": "Identificador do recurso."
      },
      "page": {
        "name": "page",
        "in": "query",
        "schema": { "type": "integer", "minimum": 1, "default": 1 },
        "description": "Página"
      },
      "per_page": {
        "name": "per_page",
        "in": "query",
        "schema": {
          "oneOf": [
            { "type": "integer", "minimum": 1, "default": 20 },
            { "type": "string", "enum": ["all"] }
          ]
        },
        "description": "Itens por página ou 'all'."
      },
      "sort_field": {
        "name": "sort_field",
        "in": "query",
        "schema": { "type": "string", "example": "created_at" },
        "description": "Campo de ordenação"
      },
      "sort_order": {
        "name": "sort_order",
        "in": "query",
        "schema": {
          "type": "string",
          "enum": ["asc", "desc"],
          "default": "asc"
        },
        "description": "Direção da ordenação"
      },
      "search": {
        "name": "search",
        "in": "query",
        "schema": { "type": "string" },
        "description": "Busca textual"
      }
    },
    "responses": {
      "Unauthorized": {
        "description": "Não autenticado",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "NotFound": {
        "description": "Recurso não encontrado",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "UnprocessableEntity": {
        "description": "Erro de validação",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "ServerError": {
        "description": "Erro interno",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      }
    },
    "schemas": {
      "lastQuestionnaireResponseDTO": {
        "type": "object",
        "required": ["family_id", "version"],
        "properties": {
          "family_id": {
            "type": "string",
            "example": "123e4567-e89b-12d3-a456-426614174001",
            "description": "ID da família"
          },
          "version": {
            "type": "integer",
            "example": 1,
            "description": "Versão do questionário"
          }
        }
      },
      "createQuestionnaireDTO": {
        "type": "object",
        "required": ["questionnaires_group_id", "title"],
        "properties": {
          "questionnaires_group_id": {
            "type": "string",
            "example": "123e4567-e89b-12d3-a456-426614174001",
            "description": "ID do grupo de questionários"
          },
          "title": {
            "type": "string",
            "maxLength": 255,
            "example": "Título do questionário"
          },
          "description": {
            "type": "string",
            "example": "Descrição do questionário"
          },
          "icon": {
            "type": "string",
            "example": "icon-name"
          }
        }
      },
      "createQuestionnairesResponseAnswerDTO": {
        "type": "object",
        "required": [
          "questionnaire_id",
          "questionnaires_group_id",
          "family_id",
          "version"
        ],
        "properties": {
          "questionnaire_id": {
            "type": "string",
            "example": "123e4567-e89b-12d3-a456-426614174001",
            "description": "ID do questionário"
          },
          "questionnaires_group_id": {
            "type": "string",
            "example": "123e4567-e89b-12d3-a456-426614174002",
            "description": "ID do grupo de questionários"
          },
          "family_id": {
            "type": "string",
            "example": "123e4567-e89b-12d3-a456-426614174003",
            "description": "ID da família"
          },
          "user_id": {
            "type": "string",
            "example": "123e4567-e89b-12d3-a456-426614174004",
            "description": "ID do usuário"
          },
          "version": {
            "type": "integer",
            "example": 1,
            "description": "Versão do questionário"
          },
          "content": {
            "type": "array",
            "description": "Conteúdo das respostas"
          },
          "justification": {
            "type": "string",
            "example": "Justificativa para a resposta",
            "description": "Justificativa"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "completed"],
            "example": "pending",
            "description": "Status da resposta"
          }
        }
      },
      "createResponseDTO": {
        "type": "object",
        "required": ["questionnaire_id", "answers"],
        "properties": {
          "social_record_id": {
            "type": "string",
            "example": "123e4567-e89b-12d3-a456-426614174001"
          },
          "social_action_id": {
            "type": "string",
            "example": "123e4567-e89b-12d3-a456-426614174002"
          }
        }
      },
      "createQuestionnaireGroupDTO": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {
            "type": "string",
            "maxLength": 255,
            "example": "Título do questionário"
          },
          "description": {
            "type": "string",
            "example": "Descrição do questionário"
          },
          "icon": {
            "type": "string",
            "example": "icon-name"
          },
          "classification": {
            "type": "string",
            "example": "classification-value"
          },
          "active": {
            "type": "boolean",
            "default": true,
            "example": true
          }
        }
      },
      "ItemResource": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "name", "created_at", "updated_at"]
      },
      "ItemResponse": {
        "type": "object",
        "properties": {
          "data": { "$ref": "#/components/schemas/ItemResource" }
        }
      },
      "PaginatedItemResource": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/ItemResource" }
          },
          "links": { "$ref": "#/components/schemas/Links" },
          "meta": { "$ref": "#/components/schemas/Meta" }
        }
      },
      "CreateItemDTO": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string", "example": "Nome do questionário" }
        }
      },
      "Links": {
        "type": "object",
        "properties": {
          "first": { "type": "string", "nullable": true },
          "last": { "type": "string", "nullable": true },
          "prev": { "type": "string", "nullable": true },
          "next": { "type": "string", "nullable": true }
        }
      },
      "Meta": {
        "type": "object",
        "properties": {
          "current_page": { "type": "integer" },
          "last_page": { "type": "integer" },
          "per_page": { "type": "integer" },
          "total": { "type": "integer" }
