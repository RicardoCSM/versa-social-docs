          "404": { "$ref": "#/components/responses/NotFound" }
        }
      },
      "delete": {
        "tags": ["Plano de Acompanhamento Familiar"],
        "summary": "Excluir tarefa do plano de acompanhamento familiar",
        "description": "Exclui uma tarefa vinculada a um plano de acompanhamento familiar.",
        "operationId": "deleteFamilyMonitoringPlanTaskRating",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Id" }
