{
  "openapi": "3.1.1",
  "info": {
    "title": "Cecad API",
    "version": "1.0.0",
    "description": "Endpoints de upload e consulta de arquivos do CECAD."
  },
  "servers": [
    {
      "url": "https://dev-api.versasocial.com.br/api/v1",
      "description": "Desenvolvimento"
    },
    {
      "url": "https://homo-api.versasocial.com.br/api/v1",
      "description": "Homologação"
    },
    {
      "url": "https://api.versasocial.com.br/api/v1",
      "description": "Produção"
    }
  ],
  "security": [{ "bearerAuth": [] }],
  "tags": [
    {
      "name": "CECAD",
      "description": "Operações relacionadas ao processamento de arquivos CECAD"
    }
  ],
  "paths": {
    "/cecad/upload": {
      "post": {
        "tags": ["CECAD"],
        "summary": "Upload de arquivo CECAD (CSV)",
        "description": "Recebe um arquivo `.csv` do CECAD e cria um registro para processamento.",
        "operationId": "uploadCecadFile",
        "parameters": [{ "$ref": "#/components/parameters/X-Domain" }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["file", "file_original_name"],
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "csv",
                    "description": "Arquivo CSV"
                  },
                  "file_original_name": {
                    "type": "string",
                    "description": "Nome original do arquivo (ex.: `cecad_2025_09.csv`)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Arquivo recebido para processamento.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CecadResource" },
                "examples": {
                  "created": {
                    "value": {
                      "data": {
                        "file": {
                          "uuid": "11111111-1111-1111-1111-111111111111",
                          "file_original_name": "cecad_2025_09.csv",
                          "extension": "csv",
                          "size": 128734,
                          "status": "queued",
                          "uploaded_by": {
                            "id": "00000000-0000-0000-0000-000000000000",
                            "name": "Administrador"
                          },
                          "created_at": "2025-09-18T12:00:00Z",
                          "updated_at": "2025-09-18T12:00:00Z"
                        },
                        "stats": {
                          "imported_rows": 0,
                          "skipped_rows": 0,
                          "error_rows": 0
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" }
        }
      }
    },
    "/cecad/files": {
      "get": {
        "tags": ["CECAD"],
        "summary": "Listar arquivos do CECAD",
        "description": "Retorna uma lista paginada de arquivos, com suporte a ordenação e busca.",
        "operationId": "listCecadFiles",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/page" },
          { "$ref": "#/components/parameters/per_page" },
          { "$ref": "#/components/parameters/sort_field" },
          { "$ref": "#/components/parameters/sort_order" },
          { "$ref": "#/components/parameters/search" },
          { "$ref": "#/components/parameters/log" },
          {
            "name": "created_at",
            "in": "query",
            "required": false,
            "schema": { "type": "string" },
            "description": "Filtrar arquivos pela data de criação."
          },
          {
            "name": "name",
            "in": "query",
            "required": false,
            "schema": { "type": "string" },
            "description": "Filtrar arquivos pelo nome do arquivo."
          },
          {
            "name": "status",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Filtrar arquivos pelo status do processamento."
          },
          {
            "name": "begin",
            "in": "query",
            "required": false,
            "schema": { "type": "string" },
            "description": "Data inicial para filtro de criação (YYYY-MM-DD)."
          },
          {
            "name": "end",
            "in": "query",
            "required": false,
            "schema": { "type": "string" },
            "description": "Data final para filtro de criação (YYYY-MM-DD)."
          }
        ],
        "responses": {
          "200": {
            "description": "Lista paginada de arquivos.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedCecadFileResource"
                }
              }
            }
          },
          "422": { "$ref": "#/components/responses/Unauthorized" }
        }
      }
    },
    "/cecad/files/{uuid}": {
      "get": {
        "tags": ["CECAD"],
        "summary": "Detalhar arquivo do CECAD",
        "description": "Retorna os dados de um arquivo específico.",
        "operationId": "getCecadFile",
        "parameters": [
          { "$ref": "#/components/parameters/X-Domain" },
          { "$ref": "#/components/parameters/Uuid" }
        ],
        "responses": {
          "200": {
            "description": "Detalhe do arquivo.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CecadFileResponse" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "JWT Bearer token"
      }
    },
    "parameters": {
      "X-Domain": {
        "name": "X-Domain",
        "in": "header",
        "required": false,
        "schema": {
          "type": "string",
          "example": "development.versasocial.com.br"
        },
        "description": "Domínio do Tenant para identificar o contexto."
      },
      "Uuid": {
        "name": "uuid",
        "in": "path",
        "required": true,
        "schema": { "type": "string", "format": "uuid" },
        "description": "Identificador do arquivo."
      },
      "page": {
        "name": "page",
        "in": "query",
        "required": false,
        "schema": { "type": "integer", "minimum": 1, "default": 1 },
        "description": "Página solicitada."
      },
      "per_page": {
        "name": "per_page",
        "in": "query",
        "required": false,
        "schema": {
          "oneOf": [
            { "type": "integer", "minimum": 1, "default": 20 },
            { "type": "string", "enum": ["all"] }
          ]
        },
        "description": "Itens por página ou 'all' para todos."
      },
      "sort_field": {
        "name": "sort_field",
        "in": "query",
        "required": false,
        "schema": { "type": "string", "example": "created_at" },
        "description": "Campo para ordenação."
      },
      "sort_order": {
        "name": "sort_order",
        "in": "query",
        "required": false,
        "schema": { "$ref": "#/components/schemas/SortOrder" },
        "description": "Ordem da ordenação (asc/desc)."
      },
      "search": {
        "name": "search",
        "in": "query",
        "required": false,
        "schema": { "type": "string" },
        "description": "Termo de busca livre."
      },
      "log": {
        "name": "log",
        "in": "query",
        "required": false,
        "schema": { "type": "boolean", "default": false },
        "description": "Se verdadeiro, habilita logging adicional (backend)."
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Requisição inválida.",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "Unauthorized": {
        "description": "Não autenticado.",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "Forbidden": {
        "description": "Sem permissão.",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "NotFound": {
        "description": "Recurso não encontrado.",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "UnprocessableEntity": {
        "description": "Erro de validação (422).",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" },
            "examples": {
              "validation": {
                "value": {
                  "message": "O campo file é obrigatório. (e mais 1 erro)",
                  "errors": {
                    "file": ["O arquivo é obrigatório e deve ser CSV."]
                  }
                }
              }
            }
          }
        }
      },
      "ServerError": {
        "description": "Erro interno no servidor.",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      }
    },
    "schemas": {
      "SortOrder": {
        "type": "string",
        "enum": ["asc", "desc"],
        "default": "asc"
      },
      "OperatorSummary": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" }
        }
      },
      "CecadFileResource": {
        "type": "object",
        "properties": {
          "uuid": { "type": "string", "format": "uuid" },
          "file_original_name": { "type": "string" },
          "extension": { "type": "string", "example": "csv" },
          "size": { "type": "integer", "description": "Tamanho em bytes" },
          "status": {
            "type": "string",
            "enum": ["queued", "processing", "completed", "failed"],
            "description": "Status do processamento"
          },
          "processed_rows": { "type": "integer", "nullable": true },
          "errors_count": { "type": "integer", "nullable": true },
          "uploaded_by": { "$ref": "#/components/schemas/OperatorSummary" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        },
        "required": [
          "uuid",
          "file_original_name",
          "extension",
          "status",
          "created_at",
          "updated_at"
        ]
      },
      "CecadFileResponse": {
        "type": "object",
        "properties": {
          "data": { "$ref": "#/components/schemas/CecadFileResource" }
        }
      },
      "PaginatedCecadFileResource": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/CecadFileResource" }
          },
          "links": { "$ref": "#/components/schemas/Links" },
          "meta": { "$ref": "#/components/schemas/Meta" }
        }
      },
      "CecadResource": {
        "type": "object",
        "description": "Envelope de sucesso do upload.",
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "file": { "$ref": "#/components/schemas/CecadFileResource" },
              "stats": {
                "type": "object",
                "properties": {
                  "imported_rows": { "type": "integer" },
                  "skipped_rows": { "type": "integer" },
                  "error_rows": { "type": "integer" }
                }
              }
            }
          }
        }
      },
      "Links": {
        "type": "object",
        "properties": {
          "first": { "type": "string", "nullable": true },
          "last": { "type": "string", "nullable": true },
          "prev": { "type": "string", "nullable": true },
          "next": { "type": "string", "nullable": true }
        }
      },
      "Meta": {
        "type": "object",
        "properties": {
          "current_page": { "type": "integer" },
          "from": { "type": "integer", "nullable": true },
          "last_page": { "type": "integer" },
          "links": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "url": { "type": "string", "nullable": true },
                "label": { "type": "string" },
                "active": { "type": "boolean" }
              }
            }
          },
          "path": { "type": "string" },
          "per_page": { "type": "integer" },
          "to": { "type": "integer", "nullable": true },
          "total": { "type": "integer" }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "errors": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
